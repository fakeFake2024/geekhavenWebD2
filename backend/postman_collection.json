{
    "info": {
        "name": "Reselling Marketplace API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Health",
            "request": {
                "method": "GET",
                "url": "{{baseUrl}}/IIT2024081/healthz"
            }
        },
        {
            "name": "Register",
            "request": {
                "method": "POST",
                "url": "{{baseUrl}}/api/v1/auth/register",
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"Pass1234\"\n}"
                },
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ]
            }
        },
        {
            "name": "Login",
            "request": {
                "method": "POST",
                "url": "{{baseUrl}}/api/v1/auth/login",
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"Pass1234\"\n}"
                },
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ]
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "var json = pm.response.json(); if(json.token){ pm.collectionVariables.set('token', json.token);}"
                        ],
                        "type": "text/javascript"
                    }
                }
            ]
        },
        {
            "name": "List Products",
            "request": {
                "method": "GET",
                "url": "{{baseUrl}}/api/v1/products"
            }
        },
        {
            "name": "Create Product",
            "request": {
                "method": "POST",
                "url": "{{baseUrl}}/api/v1/products",
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"name\": \"Item\",\n  \"description\": \"Desc\",\n  \"price\": 100,\n  \"category\": \"General\",\n  \"condition\": \"New\"\n}"
                },
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}"
                    },
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ]
            }
        },
        {
            "name": "Add To Cart",
            "request": {
                "method": "POST",
                "url": "{{baseUrl}}/api/v1/cart/{{productId}}",
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"quantity\": 1\n}"
                },
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}"
                    },
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ]
            }
        },
        {
            "name": "Checkout",
            "request": {
                "method": "POST",
                "url": "{{baseUrl}}/api/v1/checkout",
                "body": {
                    "mode": "raw",
                    "raw": "{}"
                },
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}"
                    },
                    {
                        "key": "Idempotency-Key",
                        "value": "{{$randomUUID}}"
                    },
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ]
            }
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3000"
        }
    ]
}